<style>
  .star-component {
    display: flex;
  }
  .star-color__{{ section.id }} svg path {
    fill: {{ section.settings.color }};
  }
</style>

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="section section-page-width custom-full-width spacing-style color-{{ section.settings.color_scheme }}"
  style="{% render 'spacing-padding', settings: section.settings %}"
>
  <div class="ingredients-slider__container">
    <!-- Header Section -->
    <div class="ingredients-slider__wrapper">
      {% if section.settings.rating_text != blank %}
        <div class="ingredients-slider__star-component">
          {% render 'star-svg',
            width: section.settings.width,
            star_count: section.settings.star_count,
            block: section
          %}
          <p>{{ section.settings.rating_text }}</p>
        </div>
      {% endif %}
      <div class="ingredients-slider__header">
        <h2 class="ingredients-slider__title">
          {{ section.settings.title | default: '75+ quality ingredients optimized for impact' }}
        </h2>
        <div class="ingredients-slider__buttons">
          {% if section.settings.view_all_link != blank %}
            <a
              href="{{ section.settings.view_all_link }}"
              class="ingredients-slider__button ingredients-slider__button--secondary"
            >
              {{ section.settings.view_all_text | default: 'View All Ingredients' }}
            </a>
          {% endif %}
          {% if section.settings.supplement_facts_link != blank %}
            <a
              href="{{ section.settings.supplement_facts_link }}"
              class="ingredients-slider__button ingredients-slider__button--primary"
            >
              {{ section.settings.supplement_facts_text | default: 'Supplement Facts' }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
    <!-- Slider Section -->
    {% if section.blocks.size > 0 %}
      <div
        class="swiper ingredients-slider"
        data-autoplay-speed="{{ section.settings.autoplay_speed | default: 30 }}"
        id="ingredients-slider-{{ section.id }}"
      >
        <div class="swiper-wrapper" id="ingredients-slider-wrapper-{{ section.id }}">
          {% content_for 'blocks' %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

<script defer>
  document.addEventListener('DOMContentLoaded', function () {
    const sliderElement = document.getElementById('ingredients-slider-{{ section.id }}');
    if (!sliderElement) return;

    // Wrap each block in swiper-slide
    const wrapper = document.getElementById('ingredients-slider-wrapper-{{ section.id }}');
    if (wrapper) {
      const children = Array.from(wrapper.children);
      children.forEach(function (child) {
        if (!child.classList.contains('swiper-slide')) {
          const slide = document.createElement('div');
          slide.className = 'swiper-slide';
          child.parentNode.insertBefore(slide, child);
          slide.appendChild(child);
        }
      });
    }

    const autoplaySpeed = parseInt(sliderElement.getAttribute('data-autoplay-speed')) || 30;
    const delay = 2000;

    new Swiper(sliderElement, {
      slidesPerView: 'auto',
      spaceBetween: 24,
      loop: true,
      autoplay: {
        delay: delay,
        disableOnInteraction: false,
        pauseOnMouseEnter: true,
        stopOnLastSlide: false,
      },
      grabCursor: true,
      freeMode: {
        enabled: true,
        sticky: false,
        momentum: true,
        momentumBounce: false,
      },
      breakpoints: {
        0: {
          spaceBetween: 16,
        },
        750: {
          slidesPerView: 5,
          spaceBetween: 24,
        },
      },
    });
  });
</script>

{% stylesheet %}
  .ingredients-slider__wrapper {
    padding: 3rem 7%;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ingredients-slider__star-component {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .ingredients-slider__star-component p {
    margin: 0;
  }

  .ingredients-slider__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .ingredient-card__subtitle {
    padding: 1.5rem;
    text-transform: uppercase;
  }

  .ingredients-slider__title {
    color: var(--color-foreground);
    margin: 0;
    flex: 1;
    min-width: 200px;
  }

  .ingredients-slider__buttons {
    display: flex;
    gap: 1rem;
    flex-direction: column;
  }

  .ingredients-slider__button {
    padding: 0.75rem 2rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    white-space: nowrap;
    border: 2px solid;
    display: block;
    width: 100%;
    text-align: center;
  }

  .ingredients-slider__button--secondary {
    background-color: var(--color-background);
    color: var(--color-foreground);
    border-color: var(--color-foreground);
  }

  .ingredients-slider__button--secondary:hover {
    background-color: var(--color-foreground);
    color: var(--color-background);
  }

  .ingredients-slider__button--primary {
    background-color: var(--color-foreground);
    color: var(--color-background);
    border-color: var(--color-foreground);
  }

  .ingredients-slider__button--primary:hover {
    background-color: var(--color-background);
    color: var(--color-foreground);
  }

  .ingredients-slider {
    width: 100%;
    overflow: hidden;
  }

  .ingredients-slider .swiper-wrapper {
    display: flex;
  }

  .ingredient-card {
    background-color: var(--color-background);
    border-radius: 12px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .ingredient-card__image-container {
    width: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
    position: relative;
  }

  .ingredient-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 2/3;
  }

  .ingredient-card__content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 4px;
    position: absolute;
    bottom: 0;
    top: 0;
    left: 0;
    right: 0;
  }

  .ingredient-card__wrapper {
    padding: 1.5rem;
    -webkit-backdrop-filter: blur(20px);
    backdrop-filter: blur(20px);
    bottom: -1px;
    position: absolute;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .ingredient-card__name {
    color: var(--color-foreground);
    margin: 0;
  }

  .ingredient-card__name {
    font-weight: 500;
  }

  .ingredient-card__description {
    color: var(--color-foreground);
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ingredients-slider__header {
      flex-direction: column;
      align-items: flex-start;
      padding: 0;
    }

    .ingredient-card__description {
      font-size: 14px;
    }

    .ingredient-card__wrapper,
    .ingredient-card__subtitle {
      padding: 1rem;
    }

    .ingredients-slider__buttons {
      width: 100%;
    }
  }
{% endstylesheet %}

