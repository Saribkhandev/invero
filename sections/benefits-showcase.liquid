{{ 'section-benefits-showcase.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="benefits-showcase section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="benefits-showcase__header">
        <h2 class="benefits-showcase__title {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
        {%- if section.settings.subheading != blank -%}
          <div class="benefits-showcase__caption">{{ section.settings.subheading }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="benefits-showcase__container">
      <aside class="benefits-showcase__sidebar">
        <nav class="benefits-showcase__nav">
          <ul class="benefits-showcase__nav-list">
            {%- for block in section.blocks -%}
              {%- if block.type == 'benefit' -%}
                <li class="benefits-showcase__nav-item">
                  <a
                    href="#benefit-{{ block.id }}"
                    class="benefits-showcase__nav-link"
                    data-target="benefit-{{ block.id }}"
                  >
                    {{ block.settings.title }}
                  </a>
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        </nav>
      </aside>

      <div class="benefits-showcase__content">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'intro' -%}
              <div class="benefits-showcase__intro" {{ block.shopify_attributes }}>
                <div class="benefits-showcase__intro-grid">
                  <div class="benefits-showcase__intro-item">
                    {%- if block.settings.image_1 != blank -%}
                      {{
                        block.settings.image_1
                        | image_url: width: 600
                        | image_tag: loading: 'lazy', class: 'benefits-showcase__intro-image'
                      }}
                    {%- else -%}
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                  </div>
                  <div class="benefits-showcase__intro-item">
                    {%- if block.settings.image_2 != blank -%}
                      {{
                        block.settings.image_2
                        | image_url: width: 600
                        | image_tag: loading: 'lazy', class: 'benefits-showcase__intro-image'
                      }}
                    {%- else -%}
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                  </div>
                  <div class="benefits-showcase__intro-item">
                    {%- if block.settings.image_3 != blank -%}
                      {{
                        block.settings.image_3
                        | image_url: width: 600
                        | image_tag: loading: 'lazy', class: 'benefits-showcase__intro-image'
                      }}
                    {%- else -%}
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                  </div>
                </div>
                {%- if block.settings.text != blank -%}
                  <div class="benefits-showcase__intro-text rte">
                    {{ block.settings.text }}
                  </div>
                {%- endif -%}
              </div>

            {%- when 'benefit' -%}
              <div id="benefit-{{ block.id }}" class="benefits-showcase__block" {{ block.shopify_attributes }}>
                <div class="benefits-showcase__block-content">
                  {%- if block.settings.heading != blank -%}
                    <h3 class="benefits-showcase__block-heading">{{ block.settings.heading }}</h3>
                  {%- endif -%}

                  {%- if block.settings.subtext != blank -%}
                    <div class="benefits-showcase__block-subtext">{{ block.settings.subtext }}</div>
                  {%- endif -%}

                  {%- if block.settings.description != blank -%}
                    <div class="benefits-showcase__block-description rte">
                      {{ block.settings.description }}
                    </div>
                  {%- endif -%}

                  {%- if block.settings.label != blank -%}
                    {% render 'button', block: block, link: block.settings.button_link %}
                  {%- endif -%}
                </div>
                <div class="benefits-showcase__block-image-wrapper">
                  {%- if block.settings.image != blank -%}
                    {{
                      block.settings.image
                      | image_url: width: 800
                      | image_tag: loading: 'lazy', class: 'benefits-showcase__block-image'
                    }}
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const section = document.querySelector('.section-{{ section.id }}-padding');
    const navLinks = section.querySelectorAll('.benefits-showcase__nav-link');
    const blocks = section.querySelectorAll('.benefits-showcase__block');
    const nav = section.querySelector('.benefits-showcase__nav');

    function activateLink(id) {
      navLinks.forEach((link) => {
        link.parentElement.classList.remove('is-active');
        if (link.getAttribute('href') === '#' + id) {
          link.parentElement.classList.add('is-active');
        }
      });
    }

    // Smooth scroll
    navLinks.forEach((link) => {
      link.addEventListener('click', function (e) {
        e.preventDefault();
        const targetId = this.getAttribute('href').substring(1);
        const targetBlock = document.getElementById(targetId);
        if (targetBlock) {
          // Offset for sticky header if needed, for now just scroll
          const headerOffset = 100;
          const elementPosition = targetBlock.getBoundingClientRect().top;
          const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

          window.scrollTo({
            top: offsetPosition,
            behavior: 'smooth',
          });
        }
      });
    });

    // ScrollSpy
    window.addEventListener('scroll', function () {
      let current = '';
      blocks.forEach((block) => {
        const blockTop = block.offsetTop;
        const blockHeight = block.clientHeight;
        // You might need to tweak this offset value
        if (pageYOffset >= blockTop - 300) {
          current = block.getAttribute('id');
        }
      });

      if (current) {
        activateLink(current);
      } else if (navLinks.length > 0) {
        // Default to first if inside section but above first block
        // Or handle generic intersection observer for the whole section
      }
    });

    // Set first as active initially
    if (navLinks.length > 0) {
      navLinks[0].parentElement.classList.add('is-active');
    }
  });
</script>

