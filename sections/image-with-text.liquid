  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "text_first",
          "label": "Text First"
        },
        {
          "value": "image_first",
          "label": "Image First"
        }
