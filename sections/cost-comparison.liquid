    },
    {
      "type": "text",
      "id": "total_label",
      "label": "Total Label",
      "default": "Total per month"
    },
    {
      "type": "text",
      "id": "ag1_total_price",
      "label": "Our Total Price",
      "default": "$79 USD"
    },
    {
      "type": "text",
      "id": "competitor_total_price",
      "label": "Competitor Total Price",
      "default": "$225 USD"
    },
    {
      "type": "textarea",
      "id": "note",
      "label": "Note",
      "default": "*Based on current available data for average industry prices of premium supplements"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 64
