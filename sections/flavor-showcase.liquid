{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 1.0 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 1.0 | round: 0 }}px;
  }

  .flavor-accordion {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 500px;
    max-height: 900px;
    display: flex;
    overflow: hidden;
    background-color: #000;
  }

  .flavor-accordion__header {
    position: absolute;
    top: 5rem;
    left: 4rem;
    z-index: 10;
    color: var(--color-white);
    pointer-events: none;
    max-width: 600px;
  }

  .flavor-accordion__header h2 {
    font-size: clamp(2.5rem, 5vw, 2.5rem);
    margin: 0;
    font-weight: 500;
    line-height: 1;
    color: inherit;
    font-family: var(--font-heading--family);
  }

  .flavor-accordion__header p {
    font-size: 0.8rem;
    margin-top: 0.5rem;
    opacity: 0.8;
    font-family: var(--font-body--family);
    font-style: italic;
    letter-spacing: 0.02em;
  }

  .flavor-accordion__item {
    position: relative;
    flex: 1;
    height: 100%;
    transition: flex 0.7s cubic-bezier(0.25, 1, 0.5, 1);
    cursor: pointer;
    overflow: hidden;
  }

  .flavor-accordion__item.is-active {
    flex: 2.5;
  }

  .flavor-accordion__image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .flavor-accordion__image-wrapper::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    transition: opacity 0.5s ease;
    z-index: 1;
  }

  .flavor-accordion__item.is-active .flavor-accordion__image-wrapper::after {
    opacity: 0;
  }

  .flavor-accordion__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.8s ease;
  }

  .flavor-accordion__item:hover .flavor-accordion__image {
    transform: scale(1.05);
  }

  .flavor-accordion__content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 3rem 1.5rem;
    color: var(--color-white);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    transition: background 0.5s ease, padding 0.5s var(--ease-out-cubic);
    z-index: 2;
    text-align: center;
  }

  .flavor-accordion__item.is-active .flavor-accordion__content {
    background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0) 100%);
    backdrop-filter: blur(10px);
    align-items: flex-start;
    padding: 2rem 3rem;
    text-align: left;
  }

  .flavor-accordion__item-title {
    margin: 0;
  }

  .flavor-accordion__item-details {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition: all 0.5s var(--ease-out-cubic);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 10px;
  }

  .flavor-accordion__item.is-active .flavor-accordion__item-details {
    max-height: 300px;
    opacity: 1;
    width: 100%;
  }

  .flavor-accordion__description {
    font-size: 0.7rem;
    line-height: 1.4;
    margin-right: 2rem;
    max-width: 450px;
    font-family: var(--font-body--family);
    opacity: 0.9;
  }

  .flavor-collapsible__button {
    display: inline-flex;
    align-items: center;
    background: var(--color-white);
    color: var(--color-black);
    padding: 0.5rem 1.2rem;
    border-radius: 2rem;
    text-decoration: none;
    font-size: 0.75rem;
    transition: transform 0.3s ease, background 0.3s ease;
    white-space: nowrap;
    flex-shrink: 0;
    text-transform: none;
  }

  .flavor-collapsible__button:hover {
    background: #f8f8f8;
    transform: translateY(-2px);
  }

  .flavor-collapsible__button svg {
    margin-left: 0.5rem;
    width: 14px;
    height: 14px;
  }

  @media screen and (max-width: 1024px) {
    .flavor-accordion__header {
        top: 3rem;
        left: 2rem;
    }
    .flavor-accordion__content {
        padding: 2rem;
    }
  }

  @media screen and (max-width: 749px) {
    .flavor-accordion {
      flex-direction: column;
      height: auto;
      max-height: none;
    }

    .flavor-accordion__header {
      position: relative;
      top: 0;
      left: 0;
      padding: 3rem 2rem 2rem;
      max-width: none;
    }

    .flavor-accordion__item {
      height: 250px;
      width: 100%;
      flex: none;
    }

    .flavor-accordion__item.is-active {
      height: 450px;
      flex: none;
    }

    .flavor-accordion__content {
      padding: 2rem;
    }

    .flavor-accordion__item-details {
      flex-direction: column;
      align-items: flex-start;
    }

    .flavor-accordion__description {
      margin-right: 0;
      margin-bottom: 1.5rem;
    }
  }
{%- endstyle -%}

<div class="flavor-accordion-section section-{{ section.id }}-padding">
  <div class="flavor-accordion">
    <div class="flavor-accordion__header">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>

    {%- for block in section.blocks -%}
      <div
        class="flavor-accordion__item {% if forloop.index == 2 %}is-active{% endif %}"
        {{ block.shopify_attributes }}
        data-index="{{ forloop.index0 }}"
      >
        <div class="flavor-accordion__image-wrapper">
          {%- if block.settings.image != blank -%}
            {{
              block.settings.image
              | image_url: width: 2000
              | image_tag: class: 'flavor-accordion__image', widths: '375, 550, 750, 1100, 1500, 1780, 2000'
            }}
          {%- else -%}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'flavor-accordion__image placeholder-svg' }}
          {%- endif -%}
        </div>

        <div class="flavor-accordion__content">
          <h3 class="flavor-accordion__item-title">{{ block.settings.title }}</h3>

          <div class="flavor-accordion__item-details">
            <div class="flavor-accordion__description">
              {{ block.settings.description }}
            </div>
            {%- if block.settings.button_label != blank -%}
              <a href="{{ block.settings.button_link }}" class="flavor-collapsible__button">
                {{ block.settings.button_label }}
                <svg viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const items = document.querySelectorAll('.flavor-accordion__item');

    items.forEach((item) => {
      item.addEventListener('mouseenter', () => {
        if (window.innerWidth >= 750) {
          items.forEach((i) => i.classList.remove('is-active'));
          item.classList.add('is-active');
        }
      });

      item.addEventListener('click', () => {
        if (window.innerWidth < 750) {
          const isActive = item.classList.contains('is-active');
          items.forEach((i) => i.classList.remove('is-active'));
          if (!isActive) {
            item.classList.add('is-active');
          }
        }
      });
    });
  });
</script>

