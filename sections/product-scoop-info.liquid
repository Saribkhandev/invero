{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding-block-start | times: 0.75 | round: 0 }}px !important;
    padding-bottom: {{ section.settings.padding-block-end | times: 0.75 | round: 0 }}px !important;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding-block-start }}px !important;
      padding-bottom: {{ section.settings.padding-block-end }}px !important;
    }
  }

  .product-scoop-info__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    align-items: flex-start;
  }

  @media screen and (min-width: 990px) {
    .product-scoop-info__grid {
      grid-template-columns: 1.1fr 1fr;
      gap: 120px;
    }
  }

  .product-scoop-info__content {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .product-scoop-info__heading {
    margin: 0;
    font-size: 56px;
    line-height: 1.05;
    font-weight: 500;
    letter-spacing: -0.02em;
    max-width: 700px;
  }

  .product-scoop-info__table {
    margin-top: 32px;
    border-top: 1px solid rgba(var(--color-foreground), 0.3);
  }

  .product-scoop-info__row {
    display: flex;
    justify-content: space-between;
    padding: 18px 0;
    border-bottom: 1px solid lightgrey;
    font-size: 12px;
    letter-spacing: 0.08em;
  }

  .product-scoop-info__label {
    text-transform: uppercase;
    font-weight: 500;
    padding-right: 20px;
  }

  .product-scoop-info__value {
    font-weight: 500;
    text-align: right;
  }

  .product-scoop-info__button-wrapper {
    margin-top: 15px;
  }

  .product-scoop-info__button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .product-scoop-info__button:hover {
    filter: brightness(0.9);
    {% if section.settings.button_border_color == blank %}
      border-color: rgba(var(--color-foreground), 1);
    {% endif %}
  }

  .product-scoop-info__button svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
  }

  .product-scoop-info__image-wrapper {
    width: 100%;
    background-color: #f1ede8;
    aspect-ratio: 1 / 1;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .product-scoop-info__image {
    width: 90%;
    height: 90%;
    object-fit: contain;
  }

  @media screen and (max-width: 989px) {
    .product-scoop-info__heading {
      font-size: 40px;
    }

    .product-scoop-info__grid {
      gap: 60px;
    }
  }
{%- endstyle -%}

<div class="product-scoop-info section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="section section--page-width">
    <div class="product-scoop-info__grid">
      <div class="product-scoop-info__content">
        {%- if section.settings.heading != blank -%}
          <h2 class="product-scoop-info__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="product-scoop-info__text">{{ section.settings.text }}</div>
        {%- endif -%}

        <div class="product-scoop-info__table">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'stat_row' -%}
                <div class="product-scoop-info__row" {{ block.shopify_attributes }}>
                  <span class="product-scoop-info__label">{{ block.settings.label }}</span>
                  <span class="product-scoop-info__value">{{ block.settings.value }}</span>
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>

        {%- if section.settings.button_label != blank -%}
          <div class="product-scoop-info__button-wrapper">
            <a
              href="{{ section.settings.button_link | default: '#' }}"
              class="product-scoop-info__button {{ section.settings.button_style | default: 'button' }}"
              style="
                {% if section.settings.button_text_color != blank %}--color-button-text: {{ section.settings.button_text_color }};{% endif %}
                {% if section.settings.button_bg_color != blank %}--color-button: {{ section.settings.button_bg_color }};{% endif %}
                {% if section.settings.button_border_color != blank %}border-color: {{ section.settings.button_border_color }};{% endif %}
              "
            >
              <span>{{ section.settings.button_label }}</span>
              <svg viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M4 10H16M16 10L12 6M16 10L12 14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        {%- endif -%}
      </div>

      <div class="product-scoop-info__image-wrapper">
        {%- if section.settings.image != blank -%}
          {{
            section.settings.image
            | image_url: width: 1200
            | image_tag: class: 'product-scoop-info__image', loading: 'lazy'
          }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

