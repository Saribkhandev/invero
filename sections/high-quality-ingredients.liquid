  "name": "High-Quality Ingredients",
  "tag": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "High-quality ingredients"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Main Text",
