{%- style -%}
  .scientific-conferences {
    padding: 100px 0;
    background-color: #ffffff;
    font-family: var(--font-body-family);
  }

  .scientific-conferences__container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 80px;
  }

  @media screen and (max-width: 750px) {
    .scientific-conferences {
      padding: 60px 0;
    }
    .scientific-conferences__container {
      padding: 0 20px;
    }
  }

  .scientific-conferences__header {
    margin-bottom: 48px;
  }

  .scientific-conferences__heading {
    font-size: 48px;
    font-weight: 500;
    margin: 0 0 16px 0;
    color: #000;
    letter-spacing: -0.02em;
    font-family: var(--font-heading-family);
  }

  .scientific-conferences__subtext {
    font-size: 16px;
    color: #000;
    opacity: 0.8;
  }

  @media screen and (max-width: 750px) {
    .scientific-conferences__heading {
      font-size: 32px;
    }
  }

  .conferences-table-wrapper {
    overflow-x: auto;
    border: 1px solid #e5e5e5;
  }

  .conferences-table {
    width: 100%;
    border-collapse: collapse;
    min-width: 800px;
  }

  .conferences-table th {
    background-color: #002b28;
    color: #ffffff;
    text-align: left;
    padding: 20px 24px;
    font-size: 14px;
    font-weight: 500;
    text-transform: capitalize;
    letter-spacing: 0.02em;
  }

  .conferences-table td {
    padding: 32px 24px;
    vertical-align: top;
    border-bottom: 1px solid #e5e5e5;
  }

  .conferences-table tr:nth-child(even) td {
    background-color: #f9f9f9;
  }

  .conferences-table tr:last-child td {
    border-bottom: none;
  }

  .conferences-table__title {
    font-size: 16px;
    font-weight: 500;
    color: #000;
    line-height: 1.4;
    max-width: 500px;
  }

  .conferences-table__info {
    font-size: 14px;
    line-height: 1.6;
    color: #000;
  }

  .conferences-table__info-header {
    font-weight: 700;
    display: block;
    margin-bottom: 8px;
  }

  .conferences-table__info-detail {
    display: block;
    color: #666;
    margin-bottom: 12px;
  }

  .conferences-table__link {
    color: #000;
    text-decoration: underline;
    font-weight: 500;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .conferences-table__link:hover {
    opacity: 0.7;
  }
{%- endstyle -%}

<section class="scientific-conferences">
  <div class="scientific-conferences__container">
    <div class="scientific-conferences__header">
      <h2 class="scientific-conferences__heading">{{ section.settings.heading }}</h2>
      <p class="scientific-conferences__subtext">{{ section.settings.subtext }}</p>
    </div>

    <div class="conferences-table-wrapper">
      <table class="conferences-table">
        <thead>
          <tr>
            <th style="width: 50%;">{{ section.settings.col1_label }}</th>
            <th style="width: 50%;">{{ section.settings.col2_label }}</th>
          </tr>
        </thead>
        <tbody>
          {%- for block in section.blocks -%}
            <tr>
              <td>
                <div class="conferences-table__title">{{ block.settings.title }}</div>
              </td>
              <td>
                <div class="conferences-table__info">
                  <span class="conferences-table__info-header">{{ block.settings.conference }}</span>
                  <span class="conferences-table__info-detail">{{ block.settings.details }}</span>
                  {%- if block.settings.link_url != blank -%}
                    <a href="{{ block.settings.link_url }}" class="conferences-table__link" target="_blank">
                      {{- block.settings.link_text | default: 'HERE' -}}
                    </a>
                  {%- endif -%}
                </div>
              </td>
            </tr>
          {%- endfor -%}
        </tbody>
      </table>
    </div>
  </div>
</section>

