{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .product-hero-showcase {
    padding-left: 20px;
    padding-right: 20px;
  }

  .product-showcase {
    position: relative;
    width: 100%;
    max-width: var(--wide-page-width);
    margin: 0 auto;
    border-radius: 12px;
    overflow: hidden;
    color: #fff;
    transition: background 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    min-height: 600px;
  }

  .product-showcase__content-wrapper {
    display: flex;
    width: 100%;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 60px 80px;
    gap: 60px;
    align-items: center;
  }

  .product-showcase__left {
    flex: 1;
    max-width: 560px;
    z-index: 2;
  }

  .product-showcase__right {
    flex: 1.2;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 480px;
  }

  .product-showcase__eyebrow {
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 16px;
    opacity: 0.9;
  }

  .product-showcase__heading {
    font-size: clamp(2.5rem, 4vw, 3.5rem);
    font-weight: 500;
    line-height: 1.1;
    margin-bottom: 32px;
    color: inherit;
    font-family: var(--font-heading--family);
  }

  .product-showcase__description {
    font-size: 1.1rem;
    line-height: 1.5;
    margin-bottom: 40px;
    opacity: 0.9;
  }

  .product-showcase__price-row {
    margin-bottom: 24px;
  }

  .product-showcase__price {
    font-size: 1.1rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .product-showcase__price-compare {
    text-decoration: line-through;
    opacity: 0.6;
    font-weight: 400;
  }

  .product-showcase__footnote {
    font-size: 0.75rem;
    font-style: italic;
    opacity: 0.8;
    margin-top: 4px;
  }

  .product-showcase__swatches {
    display: flex;
    gap: 12px;
    margin-top: 24px;
    margin-bottom: 32px;
  }

  .product-showcase__swatch {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 2px solid transparent;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    padding: 0;
    background: none;
  }

  .product-showcase__swatch::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background-color: var(--swatch-color);
  }

  .product-showcase__swatch.is-active {
    border-color: #fff;
  }

  .product-showcase__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    margin-top: 40px;
  }

  .product-showcase__button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 14px 40px;
    border-radius: 40px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    border: 1.5px solid transparent;
    cursor: pointer;
    gap: 8px;
  }

  .product-showcase__button--primary {
    background: #fff;
    color: #445061;
  }

  .product-showcase__button--primary:hover {
    background: #f0f0f0;
    transform: translateY(-2px);
  }

  .product-showcase__button--secondary {
    background: transparent;
    color: #fff;
    border-color: rgba(255, 255, 255, 0.4);
  }

  .product-showcase__button--secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: #fff;
    transform: translateY(-2px);
  }

  .product-showcase__button svg {
    width: 18px;
    height: 18px;
  }

  .product-showcase__image {
    position: absolute;
    max-width: 100%;
    height: auto;
    opacity: 0;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    transform: scale(0.95);
  }

  .product-showcase__image.is-active {
    opacity: 1;
    transform: scale(1);
    position: relative;
    pointer-events: auto;
  }

  @media screen and (max-width: 1024px) {
    .product-showcase__content-wrapper {
      padding: 40px;
    }
  }

  @media screen and (max-width: 768px) {
    .product-showcase {
      border-radius: 0;
    }
    .product-showcase__content-wrapper {
      flex-direction: column;
      text-align: center;
      padding: 40px 20px;
    }
    .product-showcase__left {
      max-width: 100%;
    }
    .product-showcase__swatches {
      justify-content: center;
    }
    .product-showcase__buttons {
      justify-content: center;
    }
    .product-showcase__right {
      min-height: 350px;
      width: 100%;
    }
  }
{%- endstyle -%}

<div class="product-hero-showcase section-{{ section.id }}-padding">
  <div
    class="product-showcase js-product-showcase"
    id="product-showcase-{{ section.id }}"
    style="background: {{ section.blocks[0].settings.background_gradient | default: 'linear-gradient(135deg, #445061 0%, #2e3744 100%)' }};"
  >
    <div class="product-showcase__content-wrapper">
      <div class="product-showcase__left">
        {%- if section.settings.eyebrow != blank -%}
          <div class="product-showcase__eyebrow">{{ section.settings.eyebrow }}</div>
        {%- endif -%}

        <h2 class="product-showcase__heading">{{ section.settings.heading }}</h2>

        {%- if section.settings.description != blank -%}
          <div class="product-showcase__description">
            {{ section.settings.description }}
          </div>
        {%- endif -%}

        {%- if section.settings.price != blank -%}
          <div class="product-showcase__price-row">
            <div class="product-showcase__price">
              {{ section.settings.price_prefix }}
              <strong>{{ section.settings.price }}</strong>
              {% if section.settings.compare_price != blank %}
                <span class="product-showcase__price-compare">{{ section.settings.compare_price }}</span>
              {% endif %}
            </div>
            {% if section.settings.footnote != blank %}
              <div class="product-showcase__footnote">{{ section.settings.footnote }}</div>
            {% endif %}
          </div>
        {%- endif -%}

        {%- if section.blocks.size > 1 -%}
          <div class="product-showcase__swatches">
            {%- for block in section.blocks -%}
              <button
                class="product-showcase__swatch js-showcase-swatch {% if forloop.first %}is-active{% endif %}"
                data-gradient="{{ block.settings.background_gradient }}"
                data-image-id="img-{{ block.id }}"
                style="--swatch-color: {{ block.settings.swatch_color }};"
                {{ block.shopify_attributes }}
              ></button>
            {%- endfor -%}
          </div>
        {%- endif -%}

        <div class="product-showcase__buttons">
          {%- if section.settings.button_label != blank -%}
            <a
              href="{{ section.settings.product_link | default: '#' }}"
              class="product-showcase__button product-showcase__button--primary"
            >
              {{ section.settings.button_label }}
              {%- if section.settings.show_arrow -%}
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M12 5L19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {%- endif -%}
            </a>
          {%- endif -%}

          {%- if section.settings.secondary_button_label != blank -%}
            <a
              href="{{ section.settings.secondary_button_link | default: '#' }}"
              class="product-showcase__button product-showcase__button--secondary"
            >
              {{ section.settings.secondary_button_label }}
            </a>
          {%- endif -%}
        </div>
      </div>

      <div class="product-showcase__right">
        {%- for block in section.blocks -%}
          {%- if block.settings.image != blank -%}
            {%- capture class_list -%}
              product-showcase__image js-showcase-image{% if forloop.first %} is-active{% endif %}
            {%- endcapture -%}
            {%- capture image_id -%}img-{{ block.id }}{%- endcapture -%}
            {{
              block.settings.image
              | image_url: width: 1400
              | image_tag: id: image_id, class: class_list, widths: '375, 550, 750, 1100, 1400'
            }}
          {%- else -%}
            <div
              id="img-{{ block.id }}"
              class="product-showcase__image js-showcase-image {% if forloop.first %}is-active{% endif %}"
              style="width: 100%; height: 300px; background: rgba(255,255,255,0.1); display: flex; align-items: center; justify-content: center;"
            >
              Placeholder Image
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    const section = document.querySelector('#product-showcase-{{ section.id }}');
    if (!section) return;

    const swatches = section.querySelectorAll('.js-showcase-swatch');
    const images = section.querySelectorAll('.js-showcase-image');

    swatches.forEach((swatch) => {
      swatch.addEventListener('click', () => {
        // Update active swatch
        swatches.forEach((s) => s.classList.remove('is-active'));
        swatch.classList.add('is-active');

        // Update background
        const gradient = swatch.getAttribute('data-gradient');
        section.style.background = gradient;

        // Update image
        const targetId = swatch.getAttribute('data-image-id');
        images.forEach((img) => {
          if (img.id === targetId) {
            img.classList.add('is-active');
          } else {
            img.classList.remove('is-active');
          }
        });
      });
    });
  })();
</script>

