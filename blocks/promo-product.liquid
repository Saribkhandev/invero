{% schema %}
{
  "name": "Promo Product",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Need your AG1 on the go? Try our Travel Packs"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Travel Packs"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ecebe3"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button Background Color",
      "default": "#7d6c4d"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "corner_radius",
      "label": "Corner Radius",
      "min": 0,
      "max": 40,
      "step": 1,
      "unit": "px",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Promo Product"
    }
  ]
}
{% endschema %}

{%- assign settings = block.settings -%}

<div
  class="promo-product-block"
  style="
    --bg-color: {{ settings.background_color }};
    --text-color: {{ settings.text_color }};
    --btn-bg: {{ settings.button_background_color }};
    --btn-text: {{ settings.button_text_color }};
    --radius: {{ settings.corner_radius }}px;
  "
>
  <div class="promo-product-block__content">
    {% if settings.heading != blank %}
      <h3 class="promo-product-block__heading">{{ settings.heading }}</h3>
    {% endif %}

    {% if settings.button_text != blank %}
      <a href="{{ settings.button_link | default: '#' }}" class="promo-product-block__button">
        {{ settings.button_text }}
        <span class="promo-product-block__button-icon">
          <svg width="18" height="18" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M4.16669 10H15.8334" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M10.8334 5L15.8334 10L10.8334 15" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </span>
      </a>
    {% endif %}
  </div>

  <div class="promo-product-block__image-wrapper">
    {% if settings.image != blank %}
      {{ settings.image | image_url: width: 400 | image_tag: class: 'promo-product-block__image', loading: 'lazy' }}
    {% else %}
      {{ 'product-1' | placeholder_svg_tag: 'promo-product-block__image promo-product-block__image--placeholder' }}
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .promo-product-block {
    display: flex;
    justify-content: space-between;
    align-items: stretch;
    background-color: var(--bg-color);
    color: var(--text-color);
    border-radius: var(--radius);
    padding: 32px;
    position: relative;
    overflow: hidden;
    margin: 12px 0;
    height: 100%;
    min-height: 180px;
    flex-grow: 1;
  }

  .promo-product-block__content {
    flex: 1.2;
    z-index: 2;
    padding-right: 16px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
  }

  .promo-product-block__heading {
    font-size: 22px;
    line-height: 1.25;
    margin: 0 0 20px 0;
    font-weight: 500;
    max-width: 260px;
    letter-spacing: -0.02em;
  }

  .promo-product-block__button {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background-color: var(--btn-bg);
    color: var(--btn-text);
    padding: 10px 24px;
    border-radius: 100px;
    text-decoration: none;
    font-size: 15px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .promo-product-block__button:hover {
    transform: translateY(-2px);
    filter: brightness(1.1);
  }

  .promo-product-block__button-icon {
    display: flex;
    align-items: center;
    transition: transform 0.2s ease;
  }

  .promo-product-block__button:hover .promo-product-block__button-icon {
    transform: translateX(4px);
  }

  .promo-product-block__image-wrapper {
    flex: 0.7;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    position: relative;
  }

  .promo-product-block__image {
    max-width: none;
    height: auto;
    object-fit: contain;
    filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.12));
  }

  .promo-product-block__image--placeholder {
    opacity: 0.1;
    width: 100%;
    transform: none;
  }

  @media screen and (max-width: 749px) {
    .promo-product-block {
      padding: 24px;
      flex-direction: row; /* Keep row if it fits, else column */
      overflow: hidden;
    }
  }

  @media screen and (max-width: 480px) {
    .promo-product-block {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
    }

    .promo-product-block__image-wrapper {
      width: 100%;
      justify-content: center;
    }

    .promo-product-block__image {
      width: 70%;
      transform: none;
    }

    .promo-product-block__heading {
      max-width: 100%;
    }
  }
{% endstylesheet %}
